[color]
  ui = auto
[alias]
  br           = branch
  tr           = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  current      = rev-parse --abbrev-ref HEAD
  push-current = !git push origin `git rev-parse --abbrev-ref HEAD`
  list-alias   = !git config --get-regexp '^alias\\.'

[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[core]
	editor = vim
